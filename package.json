{
  "name": "eventcatalog-slack-bot",
  "version": "1.0.0",
  "description": "A self-hosted Slack bot that connects to an EventCatalog MCP server",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "eventcatalog-slack-bot": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --config .prettierrc --write \"**/*.{js,jsx,ts,tsx,json}\"",
    "format:diff": "prettier --config .prettierrc --list-different \"**/*.{js,jsx,ts,tsx,json}\""
  },
  "keywords": [
    "eventcatalog",
    "slack",
    "bot",
    "mcp",
    "ai"
  ],
  "author": "",
  "license": "SEE LICENSE IN README.md",
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.12",
    "@ai-sdk/google": "^1.2.3",
    "@ai-sdk/openai": "^1.3.22",
    "@anthropic-ai/sdk": "^0.39.0",
    "@eventcatalog/license": "^0.0.7",
    "@slack/bolt": "^4.3.0",
    "ai": "^4.3.16",
    "commander": "^13.1.0",
    "dotenv": "^16.4.7",
    "picocolors": "^1.1.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "prettier": "^3.8.1",
    "tsup": "^8.3.6",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
